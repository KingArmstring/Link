<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.armstring.linkchattingapplication.ui.view.StatusActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/statusActivityToolbarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edtStatusInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusActivityToolbarId"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New Status" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnSaveNewStatus"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtStatusInput"
        android:layout_below="@+id/edtStatusInput"
        android:layout_marginTop="28dp"
        android:background="@color/colorAccent"
        android:text="save status"
        android:textColor="#fff" />

</RelativeLayout>
